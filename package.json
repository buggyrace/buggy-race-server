{
  "name": "buggy_race_server",
  "version": "1.0.0",
  "description": "Website for collecting buggy specifications for buggy races.",
  "scripts": {
    "build": "run-script-os",
    "build:win32": "SET NODE_ENV=production && webpack --progress --colors -p && npm run flask-static-digest",
    "build:default": "NODE_ENV=production webpack --progress --colors -p && npm run flask-static-digest",
    "start": "run-script-os",
    "start:win32": "concurrently -n \"WEBPACK,FLASK\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run webpack-watch:win32\" \"npm run flask-server\"",
    "start:default": "concurrently -n \"DB,WEBPACK,FLASK\" -c \"bgGreen.bold,bgBlue.bold,bgMagenta.bold\" \"npm run db-init\" \"npm run webpack-watch\" \"npm run flask-server\"",
    "webpack-watch": "run-script-os",
    "webpack-watch:win32": "SET NODE_ENV=debug && webpack --mode development --watch",
    "webpack-watch:default": "NODE_ENV=debug webpack --mode development --watch",
    "flask-server": "sleep 15 && flask run --cert=ssl/cert.pem --key=ssl/priv.key --host=0.0.0.0",
    "flask-static-digest": "flask digest compile",
    "db-init": "run-script-os",
    "db-init:default": "flask db upgrade",
    "lint": "eslint \"assets/js/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buggyrace/buggy_race_server.git"
  },
  "author": "Buggy Race",
  "license": "MIT",
  "engines": {
    "node": "15.x"
  },
  "bugs": {
    "url": "https://github.com/buggyrace/buggy_race_server/issues"
  },
  "homepage": "https://github.com/buggyrace/buggy_race_server#readme",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.7.7",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.0",
    "css-loader": "^3.0.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.17.3",
    "file-loader": "^6.0.0",
    "less": "^3.9.0",
    "less-loader": "^6.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "raw-loader": "^4.0.0",
    "run-script-os": "^1.0.7",
    "url-loader": "^4.0.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.2"
  }
}
